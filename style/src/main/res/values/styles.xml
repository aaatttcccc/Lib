    <!-- main theme -->
    <style name="Theme.DesignDemo.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/ic_start</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景缓存颜色 -->
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!--在无需多点触控的页面上，建议关闭多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <!-- 半透明 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- 透明的背景 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/window_background</item>
        <!-- toolbar本身的颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <!-- toolbar顶部状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <!-- 类似文本框选择之后,5.0版本以下用的styles.xml -->
        <item name="colorControlNormal">@color/black_dividers_text</item>
        <!-- 类似文本框没选择之前 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- MD风格所需要的,透明 -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <!-- 按钮颜色 -->
        <item name="colorButtonNormal">@color/primary</item>
        <!-- 所有字体颜色 -->
        <!--<item name="android:textColorPrimary">@color/text_light</item>-->
        <!-- 修改所有字体. -->
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
        <!-- Action Bar Theme -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- 左侧顶部菜单的控件 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <!-- 辅助main样式的,AppTheme ActionBar的样式 -->
    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TextAppearance</item>
        <item name="android:background">?attr/colorPrimary</item><!-- 使用系统的主颜色 -->
    </style>

    <!-- 简单文本 -->
    <style name="AppTheme.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white_text</item>
    </style>

    <!-- ActionBar文本 -->
    <style name="AppTheme.ActionBar.TextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 辅助main样式的,修改所有字体 -->
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 辅助main样式的 -->
    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--toolbarNavigationButtonStyle-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">

    </style>

    <!-- main菜单的字体样式 -->
    <!-- 左侧菜单的 -->
    <style name="MainTextStyleLeft">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>
    <!-- 右侧数据的 -->
    <style name="MainTextStyleRight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>


    <!-- 辅助main样式的,Custom Class Styles -->
    <style name="TextField" parent="android:Widget.Holo.Light.TextView">
        <!--<main_two_item_head name="android:fontFamily">sans-serif-thin</main_two_item_head>-->
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="TextAppearance.Holo.Widget.ActionBar.Title.Own" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 辅助main样式的,左侧顶部菜单的控件 -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/grey600</item>
    </style>

    <!-- TextView -->
    <style name="Diary.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- tab样式,目前应用于员工信息 #tabTextAppearance引用到下方style -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">500dp</item>
        <item name="tabIndicatorColor">@color/green_primary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="background">@android:color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>
    <!-- #Tab的title是否全大寫，如果Tab上是放icon就設false -->
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

