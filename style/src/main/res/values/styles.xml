    <!-- main theme -->
    <style name="Theme.DesignDemo.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景缓存颜色 -->
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!--在无需多点触控的页面上，建议关闭多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <!-- 半透明 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- 透明的背景 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/window_background</item>
        <!-- toolbar本身的颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <!-- toolbar顶部状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <!-- 类似文本框选择之后,5.0版本以下用的styles.xml -->
        <item name="colorControlNormal">@color/black_dividers_text</item>
        <!-- 类似文本框没选择之前 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- MD风格所需要的,透明 -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <!-- 按钮颜色 -->
        <item name="colorButtonNormal">@color/primary</item>
        <!-- 所有字体颜色 -->
        <!--<item name="android:textColorPrimary">@color/text_light</item>-->
        <!-- 修改所有字体. -->
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
        <!-- Action Bar Theme -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- 左侧顶部菜单的控件 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


        <item name="clockBackground">@android:color/white</item>
        <item name="clockTextColor">@android:color/black</item>


    </style>

    <!-- 辅助main样式的,AppTheme ActionBar的样式 -->
    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TextAppearance</item>
        <item name="android:background">?attr/colorPrimary</item><!-- 使用系统的主颜色 -->
    </style>

