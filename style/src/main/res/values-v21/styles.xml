<resources>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--在无需多点触控的页面上，建议关闭多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <!-- toolbar本身的颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <!-- toolbar顶部状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="clockWhite">@color/white_text</item>
        <item name="clockBackground">@color/window_background</item>
        <item name="clockTextColor">@android:color/black</item>
        <!-- 类似文本框选择之后,5.0版本以下用的styles.xml -->
        <item name="colorControlNormal">@color/black_dividers_text</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <!-- 类似文本框没选择之前 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- MD风格所需要的,透明 -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!-- Action Bar Theme -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- 左侧顶部菜单的控件 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- 自定义的线颜色 -->
        <item name="black_dividers_text">#12000000</item>
    </style>

    <!-- 这是为了兼容版本，不警告 -->
    <!-- 新版本动画 -->
    <style name="transitionName">
        <item name="android:transitionName">@string/transition_name</item>
    </style>

    <!-- 阴影 -->
    <style name="elevation">
        <item name="android:elevation">8dp</item>
    </style>



</resources>
